# AI Travel Planning System - Environment Variables Example
# Copy this file to .env and fill in your values

# Required API Keys
GEMINI_API_KEY=your_gemini_api_key_here
# DynamoDB Configuration
AWS_REGION=ap-northeast-1
DYNAMODB_TABLE_NAME=travel-planner
# DYNAMODB_ENDPOINT=http://localhost:8000  # Uncomment for DynamoDB Local

# Optional API Keys
# These are required for certain features, but the application will still run without them
TAVILY_API_KEY=your_tavily_api_key_here
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# System Configuration
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENVIRONMENT=development # development, staging, production
MAX_CONCURRENCY=3       # Maximum concurrent operations

# Browser Configuration
HEADLESS=true         # Run browser in headless mode
CACHE_TTL=3600        # Cache time to live in seconds
BROWSER_TIMEOUT=30000 # Default timeout in milliseconds

# Agent-Specific Model Configuration
# Format: [AGENT_TYPE]_MODEL, [AGENT_TYPE]_TEMPERATURE, [AGENT_TYPE]_MAX_TOKENS

# Orchestrator Agent
ORCHESTRATOR_MODEL=gemini-2.5-flash
ORCHESTRATOR_TEMPERATURE=0.7

# Destination Research Agent
DESTINATION_MODEL=gemini-2.5-flash
DESTINATION_TEMPERATURE=0.7

# Flight Search Agent
FLIGHT_MODEL=gemini-2.5-flash
FLIGHT_TEMPERATURE=0.4

# Accommodation Agent
ACCOMMODATION_MODEL=gemini-2.5-flash
ACCOMMODATION_TEMPERATURE=0.5

# Transportation Agent
TRANSPORTATION_MODEL=gemini-2.5-flash
TRANSPORTATION_TEMPERATURE=0.5

# Activity Planning Agent
ACTIVITY_MODEL=gemini-2.5-flash
ACTIVITY_TEMPERATURE=0.8

# Budget Management Agent
BUDGET_MODEL=gemini-2.5-flash
BUDGET_TEMPERATURE=0.3

# Default values
DEFAULT_BUDGET=2000
DEFAULT_CURRENCY=USD
